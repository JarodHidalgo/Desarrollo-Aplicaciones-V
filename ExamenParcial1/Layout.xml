<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Salario Neto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Entrada Nombre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre completo:"
        android:textSize="16sp"
        android:layout_marginBottom="5dp" />
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre completo"
        android:inputType="textPersonName"
        android:layout_marginBottom="20dp" />

    <!-- Entrada Salario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salario mensual (en córdobas):"
        android:textSize="16sp"
        android:layout_marginBottom="5dp" />
    <EditText
        android:id="@+id/etSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el salario (ej: 15000)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="20dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calcular"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/btnNuevo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nuevo"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salir"
            android:layout_margin="5dp" />
    </LinearLayout>

    <!-- Resultados -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvINSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSS: C$ 0.00"
        android:textSize="14sp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tvIR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IR: C$ 0.00"
        android:textSize="14sp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tvTotalDeduccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total deducción: C$ 0.00"
        android:textSize="14sp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tvSalarioNeto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salario neto: C$ 0.00"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp" />

</LinearLayout>